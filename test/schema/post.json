{

    "title": "Post",

    "type": "object",

    "description": "This is a post type.",

    "imports": {

        "types:\\.\\./datetime": ["DateTime"],

        "validators:\\.\\./data-types/post": ["Post"]

    },

    "collection": "posts",

    "paths": {

        "search": "/r/posts/search",

        "get": "/r/posts/{id}"

    },

    "properties": {

        "id": {

            "type": "number",

            "readOnly": true,

            "filterAs": "number",

            "checks": [

                ["checks#id", ["collection"]]

            ]

        },

        "title": {

            "type": "string",

            "checks": "checks#title",

            "filterAs": "string"

        },

        "body": {

            "type": "string",

            "readOnly": true,

            "checks": "checks#toHTML"

        },

        "tags": {

            "type": "array",

            "items": "string",

            "filterAs": "string"

        },

        "group": {

            "type": "object",

            "properties": {

                "id": "string",

                "name": "string"

            }

        },

        "created_on": {

            "type": "DateTime",

            "checks": [

                "checks#toDate",

                ["checks#localize", ["'Port of Spain'"]]

            ]

        },

        "created_by": {

            "type": "sum",

            "discriminator": {

                "type": "rw"

            },

            "variants": {

                "read": {

                    "type": "string"

                },

                "write": {

                    "type": "number"

                }
            }
        }
    },

    "methods": {

        "create": {

            "type": "Future<string>",

            "parameters": ["id: Id", "data: Comment"]

        }
    },

    "checks:test": {

        "target": "user",

        "data": "./data/user"

    }
}
