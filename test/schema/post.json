{

    "title": "Post",

    "type": "object",

    "description": "This is a post type.",

    "imports": {

        "types:\\.\\./datetime": ["DateTime"],

        "validators:\\.\\./data-types/post": ["Post"]

    },

    "collection": "posts",

    "properties": {

        "id": {

            "type": "number",

            "readOnly": true,

            "checks": [

                ["checks#id", ["collection"]]

            ]

        },

        "title": {

            "type": "string",

            "checks": "checks#title"

        },

        "body": {

            "type": "string",

            "readOnly": true,

            "checks": "checks#toHTML"

        },

        "tags": {

            "type": "array",

            "items": "string"

        },

        "created_on": {

            "type": "DateTime",

            "checks": [

                "checks#toDate",

                ["checks#localize", ["'Port of Spain'"]]

            ]

        },

        "created_by": {

            "type": "sum",

            "discriminator": {

                "type": "rw"

            },

            "variants": {

                "read": {

                    "type": "string"

                },

                "write": {

                    "type": "number"

                }
            }
        }
    },

    "checks:test": {

        "target": "user",

        "data": "./data/user"

    }
}
